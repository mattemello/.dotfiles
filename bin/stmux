#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then 
    location=$1
else
    location=`find ~ /home/ ~/Code ~/note ~/.config ~/.dotfiles -mindepth 1 -maxdepth 1 -type d | fzf`
fi

if [[ -z $location ]]; then
  exit 0
fi

selected_name=$(basename "$location" | tr . _)

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then 
    tmux new-session -ds $selected_name -c $location "nvim" . 
    tmux new-window -t $selected_name -c $location
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $location -d "nvim" .
    tmux new-window -t $selected_name -c $location
fi

if [[ -z $TMUX ]]; then
    tmux attach-session -t $selected_name
else
    tmux switch-client -t $selected_name
fi
